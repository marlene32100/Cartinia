extends ../base

block variables
  - var template = "contact"

block content
  .contact__wrapper
    figure.contact__banner
      img.contact__banner__image(alt=contact.data.banner.alt src=contact.data.banner.url)
    h1.contact__title=contact.data.title[0].text
    .contact__details
      .contact__details__address
        address.contact__details__address__text=contact.data.address
        a.contact__details__address__phone(href="tel:"+contact.data.phone)
          svg.contact__details__icon(xmlns="http://www.w3.org/2000/svg", width="24", height="24", viewBox="0 0 24 24")
            path(d="M18.48 22.926l-1.193.658c-6.979 3.621-19.082-17.494-12.279-21.484l1.145-.637 3.714 6.467-1.139.632c-2.067 1.245 2.76 9.707 4.879 8.545l1.242-.642 3.711 6.461zm-9.808-22.926l-1.68.975 3.714 6.466 1.681-.975-3.715-6.466zm8.613 14.997l-1.68.975 3.714 6.467 1.681-.975-3.715-6.467z")
          p.contact__details__address__phone__text=contact.data.phone
        br

        a.contact__details__address__email(href="mailto:"+contact.data.email)
          svg.contact__details__icon(xmlns="http://www.w3.org/2000/svg", width="24", height="24", viewBox="0 0 24 24")
            path(d="M11.99 0l-11.99 8.723v15.277h24v-15.277l-12.01-8.723zm.001 2.472l9.793 7.113-6.735 4.588-3.049-2.47-3.049 2.471-6.737-4.589 9.777-7.113zm-9.991 9.386l5.329 3.63-5.329 4.318v-7.948zm.474 10.142l9.526-7.723 9.526 7.723h-19.052zm19.526-2.194l-5.329-4.317 5.329-3.631v7.948z")
          p.contact__details__address__email__text=contact.data.email

    .contact__maps
      h2 Latitude
      p=contact.data.coordinates.latitude
      h2 Longitude
      p=contact.data.coordinates.longitude
